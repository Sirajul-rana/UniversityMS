@model UniversityMS.Models.Course

@{
    ViewBag.Title = "Save Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Save Course</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "saveCourseForm", name = "saveCourseForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.CourseCode, new { @class = "control-label col-md-2", @for = "CourseCode" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.CourseCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourseCode)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CourseName, new { @class = "control-label col-md-2", @for = "CourseName" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.CourseName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourseName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Credit, new { @class = "control-label col-md-2", @for = "Credit" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Credit, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Credit)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2", @for = "Description" })
            <div class="col-md-3">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Department", new { @class = "control-label col-md-2", @for = "DepartmentId" })
            <div class="col-md-3">
                @Html.DropDownList("DepartmentId", (SelectList)ViewData["departments"], "Select Department", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentId)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Semester", new { @class = "control-label col-md-2", @for = "SemesterId" })
            <div class="col-md-3">
                @Html.DropDownList("SemesterId", (SelectList)ViewData["semesters"], "Select Semester", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SemesterId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="SaveCourseButton" name="SaveCourseButton" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

