@model UniversityMS.Models.Department

@{
    ViewBag.Title = "Create Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Department</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createDepartmentForm", name = "createDepartmentForm" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.DepartmentCode, new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.DepartmentCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DepartmentCode)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DepartmentName, new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DepartmentName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" id="saveDepartmentButton" name="saveDepartmentButton" value="Save" class="btn btn-success" />
        </div>
    </div>
}


