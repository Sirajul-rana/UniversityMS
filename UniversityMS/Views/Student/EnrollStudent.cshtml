@model UniversityMS.Models.EnrollStudent

@{
    ViewBag.Title = "Enroll Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enroll In a Course</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "enrollCourseForm", name = "enrollCourseForm" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.StudentRegEId, new { @class = "control-label col-md-2", @for = "StudentRegId" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.StudentRegEId, (SelectList)ViewData["students"], "Select Reg. No.", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StudentRegEId)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Name", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBox("StudentName", null, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Email", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBox("StudentEmail", null, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Department", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBox("departmentId", null, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourseId, new { @class = "control-label col-md-2", @for = "RegistrationCode" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.CourseId, new SelectList(Enumerable.Empty<SelectListItem>(), "CourseId", "CourseCode"), "Select Course", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourseId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EnrollTime, new { @class = "control-label col-md-2", @for = "TeacherContactNo" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.EnrollTime, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EnrollTime)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="enrollCourseButton" name="enrollCoursetButton" value="Enroll" class="btn btn-success" />
            </div>
        </div>
    </div>
}
